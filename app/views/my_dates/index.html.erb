<p id="notice"><%= notice %></p>

<h1>My Dates</h1>

<table>
  <thead>
    <tr>
      <th>Dt</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_dates.each do |my_date| %>
      <tr>
        <td><%= my_date.dt&.strftime('%B %e, %Y %l:%M %p %Z') %></td>
        <td><%= link_to 'Show', my_date %></td>
        <td><%= link_to 'Edit', edit_my_date_path(my_date) %></td>
        <td><%= link_to 'Edit with Flatpickr', flatpickr_edit_path(my_date) %></td>
        <td><%= link_to 'Destroy', my_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

